generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// =============================================
// 1. Jugadores del quiz
// =============================================
model Player {
  id           Int      @id @default(autoincrement())
  name         String   @unique               // Nombre que pone al entrar
  correctAnswers Int    @default(0)           // cuántas acertó
  totalQuestions Int    @default(0)           // cuántas respondió (para %)
  finished     Boolean  @default(false)       // terminó el quiz?
  finishedAt   DateTime?                      // cuando terminó
  createdAt    DateTime @default(now())

  answers      Answer[]

  @@map("players")
}

// =============================================
// 2. Preguntas sobre tu amigo secreto
// =============================================
model Question {
  id       Int      @id @default(autoincrement())
  text     String
  options  String[]                     // ["Rojo", "Azul", "Verde", "Amarillo"]
  correct  String                       // "Azul"
  order    Int      @default(0)         // para que salgan siempre en el mismo orden

  answers  Answer[]

  @@map("questions")
}

// =============================================
// 3. Respuestas individuales
// =============================================
model Answer {
  id          Int      @id @default(autoincrement())
  playerId    Int
  questionId  Int
  selected    String
  isCorrect   Boolean
  answeredAt  DateTime @default(now())

  player      Player    @relation(fields: [playerId], references: [id])
  question    Question  @relation(fields: [questionId], references: [id])

  @@unique([playerId, questionId])
  @@map("answers")
}